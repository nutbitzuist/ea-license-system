# ============================================
# EA License System - Environment Variables
# ============================================
# Copy this file to .env.local for development
# For production, set these in Vercel/Railway dashboard

# --------------------------------------------
# Database (Required)
# --------------------------------------------
# PostgreSQL connection string from Supabase or other provider
# Example: postgresql://postgres:[password]@db.[project].supabase.co:5432/postgres
DATABASE_URL="postgresql://postgres:your-password@db.your-project.supabase.co:5432/postgres"

# --------------------------------------------
# Authentication (Required)
# --------------------------------------------
# NextAuth URL - Set to your domain in production
# Local: http://localhost:3000
# Production: https://yourdomain.com
NEXTAUTH_URL="http://localhost:3000"

# NextAuth Secret - Generate with: openssl rand -base64 32
# MUST be at least 32 characters for security
NEXTAUTH_SECRET="your-super-secret-key-generate-with-openssl-rand-base64-32"

# --------------------------------------------
# Email Service (Required for auth emails)
# --------------------------------------------
# Get API key from https://resend.com (free tier: 3000 emails/month)
RESEND_API_KEY="re_xxxxxxxxxxxx"

# From address for emails (must be verified in Resend)
# Use your own domain or resend.dev for testing
EMAIL_FROM="noreply@yourdomain.com"

# --------------------------------------------
# Rate Limiting (Recommended for production)
# --------------------------------------------
# Vercel KV for distributed rate limiting across serverless functions
# Auto-populated when you add Vercel KV integration in Vercel dashboard
# Leave empty for local development (uses in-memory fallback)
KV_REST_API_URL=""
KV_REST_API_TOKEN=""

# --------------------------------------------
# App Configuration (Optional - has defaults)
# --------------------------------------------
# Public-facing app name and URL
NEXT_PUBLIC_APP_NAME="My Algo Stack"
NEXT_PUBLIC_APP_URL="http://localhost:3000"

# --------------------------------------------
# Supabase Storage (Optional)
# --------------------------------------------
# Only needed if using file upload/storage features
# NEXT_PUBLIC_SUPABASE_URL="https://your-project.supabase.co"
# SUPABASE_SERVICE_ROLE_KEY="your-service-role-key"

# --------------------------------------------
# Error Tracking (Recommended for production)
# --------------------------------------------
# Sentry DSN for error tracking - get from https://sentry.io
# NEXT_PUBLIC_SENTRY_DSN="https://xxx@sentry.io/xxx"
